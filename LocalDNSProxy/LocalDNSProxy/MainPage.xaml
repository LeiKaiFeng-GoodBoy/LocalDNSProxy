<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalDNSProxy.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Editor Grid.Row="0"
                x:Name="_hosts"></Editor>
        <Entry Grid.Row="1"
               x:Name="_ipaddress"></Entry>
        <Button Grid.Row="2"
                Clicked="OnSave"
                Text="保存"></Button>
        <Button Grid.Row="3"
                Clicked="OnStart"
                Text="开始"></Button>
    </Grid>
</ContentPage>
